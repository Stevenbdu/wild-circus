{% extends 'layout.html.twig' %}

{% block title %}Mate{% endblock %}

{% block body %}
    <div class="card">
        <h1>Mate</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mate.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ mate.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ mate.description }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                {{ dump(mate) }}
                <td></td>
            </tr>
            </tbody>
        </table>
        <img src="{{ vich_uploader_asset(mate, 'imageFile') }}" >
        <a href="{{ path('mate_index') }}">back to list</a>

        <a href="{{ path('mate_edit', {'id': mate.id}) }}">edit</a>

        {{ include('mate/_delete_form.html.twig') }}
    </div>

{% endblock %}
