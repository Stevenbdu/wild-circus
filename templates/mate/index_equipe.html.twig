{% extends 'layout.html.twig' %}

{% block title %}Mate index{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="titleLogin m-0 p-5 text-center ">Découvez notre équipe ..</h2>
        <div class="row justify-content-center">
{% for mate in mates %}
            <div class="col-md-4 mt-4">
                <div class="card profile-card-5">
                    <div class="card-img-block">
                        <img class="card-img-top" src="{{ vich_uploader_asset(mate, 'imageFile') }}"
                             alt="Card image cap">
                    </div>
                    <div class="card-body pt-0">
                        <h5 class="card-titleMate mt-2 p-1">{{ mate.name }}</h5>
                        <p class="card-text">{{ mate.description }}</p>
                    </div>
                </div>
                <p class="mt-3 w-100 float-left text-center"><strong>Card with Floting Picture</strong></p>
            </div>
{% endfor %}
        </div>
    </div>
{% endblock %}
