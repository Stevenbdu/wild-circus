{% extends 'layout.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container-xl container-lg container-fluid loginForm p-5 loginPart">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
            <div class="card cardLogin">
                <h2 class="text-center p-3 m-3 titleLogin">Identifiez-vous</h2>
                <div class="form-group row mt-4">
                    <label for="inputMail" class=" col-sm-2 col-form-label text-center">Email</label>
                    <input type="text" value="{{ last_username }}" name="email" id="inputMail"
                           class=" col-sm-8 form-control border-none form-login justify-content-center"
                           required autofocus>
                </div>
                <div class="form-group row mt-4">
                    <label for="inputPassword" class=" col-sm-2 col-form-label text-center">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword"
                           class=" col-sm-8 form-control form-login"
                           required>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                </div>
                <div class="d-flex justify-content-center m-2">
                    <button class="btn btn-danger mt-5 mb-2 btnForm" type="submit">S'identifier</button>
                </div>
                <div class="text-right mb-2">
                    <a class="text-muted font-italic" href="{{ path('app_register') }}">Cr√©er un compte</a>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
