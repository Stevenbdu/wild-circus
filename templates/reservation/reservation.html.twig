{% extends 'layout.html.twig' %}
{% block body %}
    <div class="container-fluid">
            <h1 class="text-center titleReserv p-4 ">Vos Réservations</h1>
        <div class="row justify-content-center">
            {% for reservation in user.Reservation %}
                <div class="card m-5">
                    <div class="card-header">
                        Représentation à
                        {{ reservation.city }}
                    </div>
                    <div class="card-body">
                        <blockquote class="blockquote mb-0">
                            <p>Du {{ reservation.start|date('d/m/Y') }} au {{ reservation.end|date('d/m/Y') }}</p>
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer posuere erat a ante.</p>
                            <footer class="blockquote-footer">Une tournée du  <cite title="Source Title">Wild Circus</cite></footer>
                            <a class="btn btn-danger justify-content-center reserved mt-1" href="{{ path('cancel_reservation', {'id' :reservation.id }) }}">Annuler</a>
                        </blockquote>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
